{
  "name": "moss-api",
  "version": "0.1.0",
  "description": "Official API for building Moss plugins - types and utilities for plugin development",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "moss",
    "plugin",
    "sdk",
    "api",
    "tauri",
    "publishing",
    "syndication"
  ],
  "author": "Guo Liu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Symbiosis-Lab/moss-api.git"
  },
  "bugs": {
    "url": "https://github.com/Symbiosis-Lab/moss-api/issues"
  },
  "homepage": "https://github.com/Symbiosis-Lab/moss-api#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  }
}
